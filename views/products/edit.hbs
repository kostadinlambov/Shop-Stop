<form class="form center-form" method="post" enctype="multipart/form-data" action="/products/edit/{{product.id}}">
    <div class="form-group">
        <label for="name">Name</label>
        <input id="name" name="name" type="text" class="input-field" value="{{product.name}}" />
    </div>

    <div class="form-group">
        <label for="description">Description</label>
        <textarea id="description" name="description" type="text" class="input-field">{{product.description}}</textarea>
    </div>

    <div class="form-group">
        <label for="price">Price</label>
        <input id="price" name="price" type="number" step="0.01" class="input-field" value="{{product.price}}"/>
    </div>

    <div class="form-group">
        <label for="image">Image</label>
        <input id="image" name="image" type="file" accept="image/png,image/jpg,image/jpeg" class="input-field" />
    </div>

    <div class="form-group">
        <label for="group">Group</label>
        <select class="input-field" name="category">
            {{#each categories}} 
                {{#eq _id product.category }}
                    <option value="{{this._id}}" selected>{{name}}</option>
                    <h1>{{name}}</h1>
                {{else}}
                    <option value="{{this.id}}">{{name}}</option>
                 
                {{/eq}} 
            {{/each}}
        </select>
    </div>

    <div class="form-group">
        <input class="btn form-btn" type="submit" class="btn" value="Edit">
    </div>
</form>