<form class="form center-form" method="post" enctype="multipart/form-data" action="/products/delete/{{product.id}}">
    <div class="form-group">
        <label for="name">Name</label>
        <input id="name" name="name" type="text" class="input-field" value="{{product.name}}" disabled />
    </div>

    <div class="form-group">
        <label for="description">Description</label>
        <textarea id="description" name="description" type="text" class="input-field" disabled>{{product.description}}</textarea>
    </div>

    <div class="form-group">
        <label for="price">Price</label>
        <input id="price" name="price" type="number" step="0.01" class="input-field" value="{{product.price}}" disabled />
    </div>

    <div class="form-group">
        <label for="image">Image</label>
        <input id="image" name="image" type="file" accept="image/png,image/jpg,image/jpeg" class="input-field" disabled/>
    </div>

    <div class="form-group">
        <label for="group">Group</label>
        <select class="input-field" name="category">
           <option value="{{product.category.id}}" selected disabled>{{product.category.name}}</option>
            {{!-- {{#each categories}} 
                {{#eq this._id compare=product.category}}  
                {{!-- {{#eq this._id product.category}} --}}
                    {{!-- <option value="{{this._id}}" selected disabled>{{name}}</option>
                    <h1>{{name}}</h1>
                {{else}}
                    <option value="{{this.id}}" disabled>{{name}}</option>                
                {{/eq}} 
            {{/each}} --}} 
        </select>
    </div>


    <div class="form-group">
        <input class="btn form-btn" type="submit" class="btn" value="Delete">
    </div>
</form>